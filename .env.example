# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database Configuration
# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# SQLite (default if not set):
# DATABASE_URL=sqlite:///db.sqlite3
DATABASE_URL=postgresql://user:password@localhost:5432/wachat

# Telegram Bot API
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# LLM Provider Configuration
# LLM_PROVIDER: Choose which LLM service to use
# - ollama: Use local Ollama server (requires Ollama to be running)
LLM_PROVIDER=ollama
DEFAULT_MODEL=wachat-v9

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL: Model for production chat responses and user simulation
# Use wachat-v9 for realistic user simulation in /simulate command
OLLAMA_MODEL=wachat-v9
