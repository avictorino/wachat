# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database Configuration
# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# SQLite (default if not set):
# DATABASE_URL=sqlite:///db.sqlite3
DATABASE_URL=postgresql://user:password@localhost:5432/wachat

# Telegram Bot API
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# LLM Provider Configuration
# LLM_PROVIDER: Choose which LLM service to use (groq or ollama)
# - groq: Use Groq cloud API (requires GROQ_API_KEY)
# - ollama: Use local Ollama server (requires Ollama to be running)
LLM_PROVIDER=groq

# Groq API (required when LLM_PROVIDER=groq)
GROQ_API_KEY=your-groq-api-key-here

# Ollama Configuration (used when LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
